---
layout: layouts/calculator.njk
title: "Dog Age Calculator - Convert Dog Years to Human Years"
description: "Calculate your dog's age in human years with our accurate calculator. Takes into account breed size for precise age conversion."
animal: dog
permalink: /dog/calculator/
---

{% block calculatorForm %}
<form id="dog-age-form">
    <div class="form-group">
        <label for="dog-age">Your Dog's Age</label>
        <input 
            type="number" 
            id="dog-age" 
            name="age" 
            step="0.1" 
            min="0" 
            max="25" 
            placeholder="Enter age in years (e.g., 3.5)"
            required
        >
    </div>

    <div class="form-group">
        <label for="dog-size">Dog Size</label>
        <select id="dog-size" name="size" required>
            <option value="">Select size</option>
            <option value="small">Small (under 25 lbs)</option>
            <option value="medium">Medium (25-60 lbs)</option>
            <option value="large">Large (60-100 lbs)</option>
            <option value="giant">Giant (over 100 lbs)</option>
        </select>
    </div>

    <div class="form-group">
        <label for="dog-breed">Breed (Optional)</label>
        <input 
            type="text" 
            id="dog-breed" 
            name="breed" 
            placeholder="e.g., Golden Retriever"
        >
        <small>For more accurate calculations</small>
    </div>

    <button type="submit" class="calculate-btn">Calculate Dog Age</button>
</form>
{% endblock %}

{% block howItWorks %}
<p>Our dog age calculator uses the most current veterinary research:</p>
<ul>
    <li><strong>First year:</strong> Equals about 15 human years</li>
    <li><strong>Second year:</strong> Adds about 9 human years</li>
    <li><strong>Each year after:</strong> Varies by size (4-7 human years)</li>
</ul>
<p>Larger dogs age faster than smaller dogs, so we adjust the calculation based on your dog's size category.</p>
{% endblock %}

<script>
document.getElementById('dog-age-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const age = parseFloat(document.getElementById('dog-age').value);
    const size = document.getElementById('dog-size').value;
    const breed = document.getElementById('dog-breed').value;
    
    if (!age || !size) {
        alert('Please fill in all required fields');
        return;
    }
    
    // Import the calculator function (this would be loaded separately in real implementation)
    const result = calculateDogAge(age, size, breed);
    
    displayResult(result);
});

function calculateDogAge(dogYears, size, breed = null) {
    // Simplified version of the calculator for the frontend
    const sizeMultipliers = {
        small: 4,
        medium: 5,
        large: 6,
        giant: 7
    };

    let humanYears;
    let breakdown = [];

    if (dogYears <= 1) {
        humanYears = 15 * dogYears;
        breakdown.push(`${dogYears} dog year(s) × 15 = ${humanYears} human years`);
    } else if (dogYears <= 2) {
        const firstYear = 15;
        const secondYear = 9 * (dogYears - 1);
        humanYears = firstYear + secondYear;
        breakdown.push('First year: 15 human years');
        breakdown.push(`Second year: ${(dogYears - 1).toFixed(1)} × 9 = ${secondYear.toFixed(1)} human years`);
    } else {
        const firstTwoYears = 24;
        const remainingYears = (dogYears - 2) * sizeMultipliers[size];
        humanYears = firstTwoYears + remainingYears;
        breakdown.push('First 2 years: 24 human years');
        breakdown.push(`Remaining ${(dogYears - 2).toFixed(1)} years × ${sizeMultipliers[size]} = ${remainingYears.toFixed(1)} human years`);
    }

    // Determine life stage
    let lifeStage;
    if (dogYears < 1) lifeStage = 'puppy';
    else if (dogYears < 2) lifeStage = 'young adult';
    else if (dogYears < 7) lifeStage = 'adult';
    else if (dogYears < 10) lifeStage = 'mature';
    else lifeStage = 'senior';

    return {
        dogYears: parseFloat(dogYears.toFixed(1)),
        humanYears: Math.round(humanYears),
        size,
        breed,
        lifeStage,
        breakdown
    };
}

function displayResult(result) {
    const resultDiv = document.getElementById('calculator-result');
    const contentDiv = document.getElementById('result-content');
    
    contentDiv.innerHTML = `
        <div class="result-main">
            <h2>${result.dogYears} dog years = ${result.humanYears} human years</h2>
            <p class="life-stage">Life stage: <strong>${result.lifeStage}</strong></p>
            ${result.breed ? `<p class="breed">Breed: ${result.breed}</p>` : ''}
        </div>
        
        <div class="result-breakdown">
            <h4>Calculation Breakdown:</h4>
            <ul>
                ${result.breakdown.map(item => `<li>${item}</li>`).join('')}
            </ul>
            <p class="total"><strong>Total: ${result.humanYears} human years</strong></p>
        </div>
        
        <div class="result-tips">
            <h4>Care Tips for ${result.lifeStage} dogs:</h4>
            ${getLifeStageTips(result.lifeStage)}
        </div>
    `;
    
    resultDiv.style.display = 'block';
    resultDiv.scrollIntoView({ behavior: 'smooth' });
}

function getLifeStageTips(lifeStage) {
    const tips = {
        puppy: `
            <ul>
                <li>Focus on socialization and basic training</li>
                <li>Multiple small meals throughout the day</li>
                <li>Puppy-proofing your home is essential</li>
                <li>Start vaccination schedule with your vet</li>
            </ul>
        `,
        'young adult': `
            <ul>
                <li>Continue training and establish routines</li>
                <li>Regular exercise and mental stimulation</li>
                <li>Consider spaying/neutering consultation</li>
                <li>Annual vet checkups</li>
            </ul>
        `,
        adult: `
            <ul>
                <li>Maintain regular exercise routine</li>
                <li>Monitor weight and adjust diet as needed</li>
                <li>Annual vet checkups and dental care</li>
                <li>Watch for breed-specific health issues</li>
            </ul>
        `,
        mature: `
            <ul>
                <li>Consider senior diet formulation</li>
                <li>More frequent vet checkups (every 6 months)</li>
                <li>Monitor for arthritis and mobility issues</li>
                <li>Adjust exercise to comfort level</li>
            </ul>
        `,
        senior: `
            <ul>
                <li>Senior-specific diet and supplements</li>
                <li>More frequent vet visits</li>
                <li>Comfortable bedding and easy access to food/water</li>
                <li>Gentle exercise and mental stimulation</li>
            </ul>
        `
    };
    
    return tips[lifeStage] || '<p>Consult your veterinarian for age-appropriate care advice.</p>';
}
</script>