<script>
function calculateFood() {
    const weight = document.getElementById('dog-weight').value;
    const activity = document.getElementById('activity-level').value;
    const resultDiv = document.getElementById('food-result');
    
    if (weight) {
        let baseCalories = Math.round(30 * Math.pow(parseFloat(weight) / 2.2, 0.75) + 70);
        
        // Adjust for activity level
        if (activity === 'low') baseCalories *= 1.2;
        else if (activity === 'moderate') baseCalories *= 1.6;
        else if (activity === 'high') baseCalories *= 2.0;
        
        const cups = Math.round((baseCalories / 350) * 10) / 10; // Assuming 350 cal/cup
        
        resultDiv.innerHTML = `
            <div class="result-content">
                <strong>Daily Needs:</strong><br>
                ${Math.round(baseCalories)} calories<br>
                Approximately ${cups} cups of dry food
            </div>
        `;
    }
}

function checkFood() {
    const food = document.getElementById('food-input').value.toLowerCase();
    const resultDiv = document.getElementById('food-safety-result');
    
    const safefoods = ['apple', 'carrot', 'blueberry', 'chicken', 'rice', 'pumpkin', 'sweet potato'];
    const toxicFoods = ['chocolate', 'grape', 'raisin', 'onion', 'garlic', 'xylitol', 'alcohol'];
    const moderateFoods = ['cheese', 'banana', 'egg', 'bread'];
    
    if (toxicFoods.some(toxic => food.includes(toxic))) {
        resultDiv.innerHTML = '<div class="result toxic">üö´ TOXIC - Do not feed!</div>';
    } else if (safefoods.some(safe => food.includes(safe))) {
        resultDiv.innerHTML = '<div class="result safe">‚úÖ SAFE - Good choice!</div>';
    } else if (moderateFoods.some(mod => food.includes(mod))) {
        resultDiv.innerHTML = '<div class="result moderate">‚ö†Ô∏è IN MODERATION</div>';
    } else if (food.length > 0) {
        resultDiv.innerHTML = '<div class="result unknown">‚ùì Consult your vet</div>';
    }
}

// Tab functionality
document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabButtons.forEach(button => {
        button.addEventListener('click', () => {
            const tabName = button.getAttribute('data-tab');
            
            // Remove active class from all buttons and contents
            tabButtons.forEach(btn => btn.classList.remove('active'));
            tabContents.forEach(content => content.classList.remove('active'));
            
            // Add active class to clicked button and corresponding content
            button.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');
        });
    });
});
</script>