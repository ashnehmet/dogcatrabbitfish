<script>
function calculateDogAge() {
    const age = document.getElementById('dog-age').value;
    const size = document.getElementById('dog-size').value;
    const resultDiv = document.getElementById('age-result');
    
    // Clear previous results and validate input
    resultDiv.innerHTML = '';
    
    if (!age || age < 0 || age > 30) {
        resultDiv.innerHTML = `
            <div class="result-content error">
                <strong>Please enter a valid age between 0 and 30 years</strong>
            </div>
        `;
        return;
    }
    
    const dogAge = parseFloat(age);
    let humanAge;
    let lifeStage = '';
    
    // More accurate age calculation based on latest veterinary research
    if (dogAge < 1) {
        humanAge = dogAge * 15;
        lifeStage = 'Puppy';
    } else if (dogAge === 1) {
        humanAge = size === 'large' ? 14 : 15;
        lifeStage = 'Young Adult';
    } else if (dogAge === 2) {
        humanAge = size === 'large' ? 22 : 24;
        lifeStage = 'Adult';
    } else {
        const baseAge = size === 'large' ? 22 : 24;
        const additionalYears = dogAge - 2;
        let yearMultiplier;
        
        // Size-based aging rates
        switch(size) {
            case 'small':
                yearMultiplier = 4;
                break;
            case 'medium':  
                yearMultiplier = 4.5;
                break;
            case 'large':
                yearMultiplier = 5;
                break;
            default:
                yearMultiplier = 4.5;
        }
        
        humanAge = baseAge + (additionalYears * yearMultiplier);
        
        // Determine life stage
        if (dogAge < 7) {
            lifeStage = 'Adult';
        } else if (dogAge < 10) {
            lifeStage = 'Mature Adult';
        } else {
            lifeStage = 'Senior';
        }
    }
    
    // Health recommendations based on age
    let recommendations = [];
    if (dogAge < 1) {
        recommendations = ['Puppy vaccinations', 'Frequent vet checkups', 'Socialization training'];
    } else if (dogAge < 7) {
        recommendations = ['Annual vet checkups', 'Regular exercise', 'Dental care'];
    } else {
        recommendations = ['Bi-annual vet visits', 'Joint health monitoring', 'Senior diet consideration'];
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="age-result">
                <strong>Human Age Equivalent:</strong><br>
                <span class="age-number">${Math.round(humanAge)}</span> years old
            </div>
            <div class="life-stage">
                <strong>Life Stage:</strong> ${lifeStage}
            </div>
            <div class="recommendations">
                <strong>Health Recommendations:</strong>
                <ul>
                    ${recommendations.map(rec => `<li>${rec}</li>`).join('')}
                </ul>
            </div>
        </div>
    `;
}

// Exercise Calculator
function calculateExercise() {
    const breed = document.getElementById('exercise-breed').value;
    const age = document.getElementById('exercise-age').value;
    const weight = parseInt(document.getElementById('exercise-weight').value);
    const resultDiv = document.getElementById('exercise-result');
    
    if (!breed || !age || !weight) {
        resultDiv.innerHTML = '<p style="color: #e74c3c;">Please fill in all fields.</p>';
        return;
    }
    
    // Base exercise needs by breed group (minutes per day)
    const breedExercise = {
        'working': 120,
        'sporting': 150,
        'terrier': 90,
        'hound': 90,
        'toy': 30,
        'non-sporting': 60
    };
    
    let baseMinutes = breedExercise[breed];
    
    // Adjust for age
    if (age === 'puppy') {
        baseMinutes = Math.round(baseMinutes * 0.6); // 5 minutes per month of age rule
    } else if (age === 'senior') {
        baseMinutes = Math.round(baseMinutes * 0.7);
    }
    
    // Adjust for weight (larger dogs need more exercise)
    if (weight > 80) {
        baseMinutes = Math.round(baseMinutes * 1.2);
    } else if (weight < 15) {
        baseMinutes = Math.round(baseMinutes * 0.8);
    }
    
    const walks = Math.ceil(baseMinutes / 45); // Assume 45-minute walks
    const playTime = Math.round(baseMinutes * 0.3);
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="exercise-total">
                <strong>Daily Exercise Need:</strong><br>
                <span class="big-number">${baseMinutes}</span> minutes
            </div>
            <div class="exercise-breakdown">
                <strong>Recommended Activities:</strong>
                <ul>
                    <li>${walks} walk(s) per day</li>
                    <li>${playTime} minutes of play time</li>
                    <li>Mental stimulation activities</li>
                </ul>
            </div>
            ${age === 'puppy' ? '<p><em>Note: Puppies need shorter, more frequent sessions</em></p>' : ''}
            ${age === 'senior' ? '<p><em>Note: Monitor for fatigue and joint stress</em></p>' : ''}
        </div>
    `;
}

// Ideal Weight Calculator
function calculateIdealWeight() {
    const breed = document.getElementById('weight-breed').value;
    const currentWeight = parseInt(document.getElementById('current-weight').value);
    const condition = document.getElementById('body-condition').value;
    const resultDiv = document.getElementById('weight-result');
    
    if (!breed || !currentWeight || !condition) {
        resultDiv.innerHTML = '<p style="color: #e74c3c;">Please fill in all fields.</p>';
        return;
    }
    
    // Ideal weight ranges by breed (in pounds)
    const breedWeights = {
        'chihuahua': [2, 6],
        'beagle': [20, 30],
        'labrador': [55, 80],
        'german-shepherd': [50, 90],
        'golden-retriever': [55, 75],
        'bulldog': [40, 50],
        'rottweiler': [80, 135],
        'great-dane': [110, 175],
        'mixed': [currentWeight * 0.85, currentWeight * 1.15] // Estimate based on current
    };
    
    const [minWeight, maxWeight] = breedWeights[breed];
    const avgIdeal = (minWeight + maxWeight) / 2;
    
    let status = '';
    let recommendation = '';
    let targetWeight = currentWeight;
    
    if (condition === 'underweight') {
        status = 'Below ideal weight';
        targetWeight = avgIdeal;
        recommendation = 'Consult vet about nutrition plan to gain healthy weight';
    } else if (condition === 'ideal') {
        status = 'Perfect weight!';
        recommendation = 'Maintain current diet and exercise routine';
    } else if (condition === 'overweight') {
        status = 'Above ideal weight';
        targetWeight = avgIdeal;
        recommendation = 'Reduce calories by 10-20% and increase exercise';
    } else if (condition === 'obese') {
        status = 'Significantly overweight';
        targetWeight = avgIdeal;
        recommendation = 'Immediate vet consultation for weight loss plan needed';
    }
    
    resultDiv.innerHTML = `
        <div class="result-content ${condition === 'ideal' ? 'success' : 'warning'}">
            <div class="weight-status">
                <strong>Status:</strong> ${status}
            </div>
            <div class="weight-ranges">
                <strong>Ideal Range:</strong> ${minWeight}-${maxWeight} lbs<br>
                <strong>Current Weight:</strong> ${currentWeight} lbs<br>
                ${targetWeight !== currentWeight ? `<strong>Target Weight:</strong> ${Math.round(targetWeight)} lbs` : ''}
            </div>
            <div class="weight-recommendation">
                <strong>Recommendation:</strong><br>
                ${recommendation}
            </div>
        </div>
    `;
}

// Crate Size Calculator
function calculateCrateSize() {
    const length = parseInt(document.getElementById('dog-length').value);
    const height = parseInt(document.getElementById('dog-height').value);
    const purpose = document.getElementById('crate-purpose').value;
    const resultDiv = document.getElementById('crate-result');
    
    if (!length || !height || !purpose) {
        resultDiv.innerHTML = '<p style="color: #e74c3c;">Please fill in all fields.</p>';
        return;
    }
    
    // Add space based on purpose
    let lengthPadding = 4; // Standard 4 inches
    let heightPadding = 4;
    
    if (purpose === 'travel') {
        lengthPadding = 2; // Tighter for travel
        heightPadding = 2;
    } else if (purpose === 'comfort') {
        lengthPadding = 6; // More space for comfort
        heightPadding = 6;
    }
    
    const crateLength = length + lengthPadding;
    const crateHeight = height + heightPadding;
    const crateWidth = Math.round(crateLength * 0.7); // Typical width ratio
    
    // Standard crate sizes
    const standardSizes = [
        { name: 'XS', length: 18, width: 12, height: 14 },
        { name: 'S', length: 24, width: 18, height: 19 },
        { name: 'M', length: 30, width: 21, height: 24 },
        { name: 'L', length: 36, width: 24, height: 27 },
        { name: 'XL', length: 42, width: 28, height: 30 },
        { name: 'XXL', length: 48, width: 32, height: 35 }
    ];
    
    let recommendedSize = standardSizes.find(size => 
        size.length >= crateLength && size.height >= crateHeight
    ) || standardSizes[standardSizes.length - 1];
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="crate-size">
                <strong>Recommended Size:</strong><br>
                <span class="big-number">${recommendedSize.name}</span>
            </div>
            <div class="crate-dimensions">
                <strong>Dimensions:</strong><br>
                ${recommendedSize.length}"L √ó ${recommendedSize.width}"W √ó ${recommendedSize.height}"H
            </div>
            <div class="crate-tips">
                <strong>Tips:</strong>
                <ul>
                    <li>Dog should stand and turn around comfortably</li>
                    <li>Add comfortable bedding</li>
                    ${purpose === 'travel' ? '<li>Check airline requirements if flying</li>' : ''}
                    ${purpose === 'home' ? '<li>Place in quiet, family area</li>' : ''}
                </ul>
            </div>
        </div>
    `;
}

