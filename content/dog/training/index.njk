<script>
function calculateTrainingTime() {
    const ageMonths = document.getElementById('dog-age-months').value;
    const resultDiv = document.getElementById('training-result');
    
    if (ageMonths) {
        let sessionTime, sessionsPerDay;
        
        if (ageMonths < 4) {
            sessionTime = 5;
            sessionsPerDay = 3;
        } else if (ageMonths < 12) {
            sessionTime = 10;
            sessionsPerDay = 2;
        } else {
            sessionTime = 15;
            sessionsPerDay = 2;
        }
        
        resultDiv.innerHTML = `
            <div class="result-content">
                <strong>Recommended:</strong><br>
                ${sessionTime} minutes per session<br>
                ${sessionsPerDay} sessions per day
            </div>
        `;
    }
}
</script>