<script>
function decodeBehavior() {
    const behavior = document.getElementById('behavior-input').value;
    const resultDiv = document.getElementById('behavior-result');
    
    if (!behavior) {
        resultDiv.innerHTML = '<div class="result-content error">Please select a behavior to decode.</div>';
        return;
    }
    
    const behaviorMeanings = {
        'purring': {
            meaning: 'Contentment and Happiness',
            details: 'Usually indicates your cat is relaxed and content. Can also be self-soothing when stressed or in pain.',
            action: 'Enjoy the bonding moment! If purring seems excessive or occurs during illness, consult your vet.'
        },
        'kneading': {
            meaning: 'Love and Comfort',
            details: 'This behavior stems from kittenhood nursing. Your cat sees you as a source of comfort and security.',
            action: 'Feel honored! Provide a soft blanket if the claws are uncomfortable.'
        },
        'tail-up': {
            meaning: 'Confidence and Greeting',
            details: 'A cat with tail held high is confident, happy, and ready for social interaction.',
            action: 'Great time for petting and interaction! Your cat is in a positive mood.'
        },
        'tail-puffed': {
            meaning: 'Fear or Arousal',
            details: 'Puffed tail indicates your cat feels threatened, frightened, or highly excited.',
            action: 'Give your cat space and remove stressors. Approach calmly when the tail returns to normal.'
        },
        'slow-blink': {
            meaning: 'Trust and Affection',
            details: 'Called "cat kisses," slow blinking is your cat\'s way of saying "I love you."',
            action: 'Slow blink back! This strengthens your bond and communication.'
        },
        'head-butting': {
            meaning: 'Scent Marking and Bonding',
            details: 'Your cat is marking you with their scent glands, claiming you as part of their family.',
            action: 'This is the ultimate compliment! Gentle head scratches are usually appreciated.'
        },
        'bringing-gifts': {
            meaning: 'Sharing and Teaching',
            details: 'Your cat sees you as family and wants to share their hunting success or teach you to hunt.',
            action: 'Thank your cat calmly, then dispose of gifts discreetly. Don\'t scold this natural behavior.'
        },
        'midnight-zoomies': {
            meaning: 'Natural Activity Cycle',
            details: 'Cats are crepuscular (most active at dawn/dusk). This is normal hunting behavior.',
            action: 'Increase daytime play and provide nighttime entertainment. Consider puzzle feeders.'
        }
    };
    
    const selected = behaviorMeanings[behavior];
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="behavior-meaning">
                <strong>Meaning:</strong> ${selected.meaning}
            </div>
            <div class="behavior-details">
                <strong>What it means:</strong><br>
                ${selected.details}
            </div>
            <div class="behavior-action">
                <strong>What to do:</strong><br>
                ${selected.action}
            </div>
        </div>
    `;
}

function calculateEnrichment() {
    const energy = document.getElementById('cat-energy').value;
    const living = document.getElementById('living-situation').value;
    const aloneTime = document.getElementById('alone-time').value;
    const resultDiv = document.getElementById('enrichment-result');
    
    if (!energy || !living || !aloneTime) {
        resultDiv.innerHTML = '<div class="result-content error">Please fill in all fields.</div>';
        return;
    }
    
    const hours = parseInt(aloneTime);
    let recommendations = [];
    let dailyPlayTime = 0;
    let toyRotation = '';
    
    // Base recommendations on energy level
    if (energy === 'high') {
        dailyPlayTime = 30;
        recommendations.push('Interactive wand toys for 15+ minutes twice daily');
        recommendations.push('Puzzle feeders for all meals');
        recommendations.push('Cat tree with multiple levels');
    } else if (energy === 'moderate') {
        dailyPlayTime = 20;
        recommendations.push('Interactive play for 10+ minutes twice daily');
        recommendations.push('Puzzle toys and treat balls');
        recommendations.push('Scratching posts in multiple locations');
    } else {
        dailyPlayTime = 15;
        recommendations.push('Gentle play for 5-10 minutes twice daily');
        recommendations.push('Simple puzzle feeders');
        recommendations.push('Comfortable perches for watching');
    }
    
    // Adjust for living situation
    if (living === 'indoor') {
        recommendations.push('Window perches for bird watching');
        recommendations.push('Cat TV or nature videos');
        if (energy === 'high') {
            recommendations.push('Consider a companion cat');
        }
    } else if (living === 'catio') {
        recommendations.push('Outdoor enrichment is great!');
        recommendations.push('Rotate indoor and outdoor time');
    }
    
    // Adjust for alone time
    if (hours > 8) {
        toyRotation = 'Rotate toys every 2-3 days';
        recommendations.push('Automatic feeders with timers');
        recommendations.push('Interactive toys that work independently');
        if (hours > 10) {
            recommendations.push('Consider pet cameras for interaction');
        }
    } else if (hours > 4) {
        toyRotation = 'Rotate toys weekly';
        recommendations.push('Leave engaging toys out during absence');
    } else {
        toyRotation = 'Rotate toys as needed';
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="play-time">
                <strong>Daily Play Time:</strong><br>
                <span class="time-number">${dailyPlayTime}</span> minutes minimum
            </div>
            <div class="toy-rotation">
                <strong>Toy Strategy:</strong> ${toyRotation}
            </div>
            <div class="enrichment-recommendations">
                <strong>Recommended Enrichment:</strong>
                <ul>
                    ${recommendations.map(rec => `<li>${rec}</li>`).join('')}
                </ul>
            </div>
        </div>
    `;
}

function checkStressLevel() {
    const checkedBoxes = document.querySelectorAll('.stress-sign:checked').length;
    const resultDiv = document.getElementById('stress-result');
    
    let stressLevel = '';
    let recommendations = [];
    let urgency = '';
    
    if (checkedBoxes === 0) {
        stressLevel = 'Low Stress';
        recommendations = ['Continue current care routine', 'Monitor for changes', 'Maintain enrichment activities'];
        urgency = 'routine';
    } else if (checkedBoxes <= 2) {
        stressLevel = 'Mild Stress';
        recommendations = ['Identify and minimize stressors', 'Increase enrichment activities', 'Consider pheromone diffusers', 'Monitor closely'];
        urgency = 'watch';
    } else if (checkedBoxes <= 4) {
        stressLevel = 'Moderate Stress';
        recommendations = ['Schedule vet visit to rule out medical issues', 'Use Feliway or similar calming aids', 'Create more hiding spaces', 'Reduce household changes'];
        urgency = 'concern';
    } else {
        stressLevel = 'High Stress';
        recommendations = ['Veterinary consultation recommended', 'Consider anti-anxiety medication', 'Environmental management crucial', 'Professional behaviorist consultation'];
        urgency = 'urgent';
    }
    
    const urgencyClasses = {
        'routine': 'success',
        'watch': 'warning', 
        'concern': 'warning',
        'urgent': 'error'
    };
    
    resultDiv.innerHTML = `
        <div class="result-content ${urgencyClasses[urgency]}">
            <div class="stress-level">
                <strong>Stress Assessment:</strong><br>
                <span class="stress-indicator">${stressLevel}</span>
            </div>
            <div class="stress-recommendations">
                <strong>Recommendations:</strong>
                <ul>
                    ${recommendations.map(rec => `<li>${rec}</li>`).join('')}
                </ul>
            </div>
            ${urgency === 'urgent' ? '<div class="urgent-note"><em>Consider veterinary consultation promptly.</em></div>' : ''}
        </div>
    `;
}
