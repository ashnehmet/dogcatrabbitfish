    };
    
    const purchaseCosts = {
        'breeder': 1500,
        'rescue': 125,
        'free': 0
    };
    
    const annual = breedCosts[breed];
    const initialCost = purchaseCosts[purchaseType];
    
    const totalAnnual = annual.food + annual.vet + annual.grooming + annual.supplies;
    const totalLifetime = initialCost + (totalAnnual * years);
    
    document.getElementById('costBreakdown').innerHTML = `
        <div class="cost-summary">
            <h4>üí∞ ${years}-Year Cost Breakdown</h4>
            <div class="cost-item">
