<script>
function assessHealth() {
    const checkedItems = document.querySelectorAll('.health-indicator:checked').length;
    const totalItems = document.querySelectorAll('.health-indicator').length;
    const resultDiv = document.getElementById('health-assessment-result');
    
    const healthPercentage = Math.round((checkedItems / totalItems) * 100);
    
    let healthStatus = '';
    let recommendations = [];
    let urgency = '';
    
    if (healthPercentage >= 85) {
        healthStatus = 'Excellent Health';
        recommendations = ['Continue current care routine', 'Maintain regular vet checkups', 'Keep monitoring daily'];
        urgency = 'success';
    } else if (healthPercentage >= 70) {
        healthStatus = 'Good Health';
        recommendations = ['Monitor unchecked items closely', 'Consider vet consultation if issues persist', 'Maintain preventive care'];
        urgency = 'success';
    } else if (healthPercentage >= 50) {
        healthStatus = 'Health Concerns';
        recommendations = ['Schedule vet appointment soon', 'Monitor eating, drinking, and litter box usage', 'Note any behavior changes'];
        urgency = 'warning';
    } else {
        healthStatus = 'Multiple Health Issues';
        recommendations = ['Veterinary consultation recommended promptly', 'Monitor closely for emergency signs', 'Document all symptoms for vet visit'];
        urgency = 'error';
    }
    
    resultDiv.innerHTML = `
        <div class="result-content ${urgency}">
            <div class="health-status">
                <strong>Health Status:</strong><br>
                <span class="health-score">${healthPercentage}%</span> - ${healthStatus}
            </div>
            <div class="health-recommendations">
                <strong>Recommendations:</strong>
                <ul>
                    ${recommendations.map(rec => `<li>${rec}</li>`).join('')}
                </ul>
            </div>
            ${urgency === 'error' ? '<div class="urgent-note"><em>Consider prompt veterinary attention.</em></div>' : ''}
        </div>
    `;
}

function setMedReminder() {
    const medName = document.getElementById('med-name').value;
    const frequency = document.getElementById('med-frequency').value;
    const lastGiven = document.getElementById('last-given').value;
    const resultDiv = document.getElementById('med-reminder-result');
    
    if (!medName || !frequency || !lastGiven) {
        resultDiv.innerHTML = '<div class="result-content error">Please fill in all fields.</div>';
        return;
    }
    
    const lastGivenDate = new Date(lastGiven);
    const now = new Date();
    const timeSinceLastDose = Math.floor((now - lastGivenDate) / (1000 * 60 * 60)); // hours
    
    let nextDueHours = 0;
    let frequencyText = '';
    
    switch(frequency) {
        case 'daily':
            nextDueHours = 24;
            frequencyText = 'every 24 hours';
            break;
        case 'twice-daily':
            nextDueHours = 12;
            frequencyText = 'every 12 hours';
            break;
        case 'weekly':
            nextDueHours = 168; // 7 days
            frequencyText = 'every 7 days';
            break;
        case 'as-needed':
            frequencyText = 'as needed - follow vet instructions';
            break;
    }
    
    let status = '';
    let nextDue = '';
    
    if (frequency !== 'as-needed') {
        const hoursUntilNext = nextDueHours - timeSinceLastDose;
        
        if (hoursUntilNext <= 0) {
            status = 'Due now or overdue';
            nextDue = 'Give medication now';
        } else if (hoursUntilNext <= 2) {
            status = 'Due soon';
            nextDue = `Next dose in ${hoursUntilNext} hour(s)`;
        } else {
            status = 'On schedule';
            nextDue = `Next dose in ${hoursUntilNext} hour(s)`;
        }
    } else {
        status = 'As needed medication';
        nextDue = 'Follow veterinarian instructions';
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="medication-status">
                <strong>Medication:</strong> ${medName}<br>
                <strong>Frequency:</strong> ${frequencyText}
            </div>
            <div class="next-dose">
                <strong>Status:</strong> ${status}<br>
                <strong>Next dose:</strong> ${nextDue}
            </div>
            <div class="reminder-note">
                <em>Set phone reminders or alarms for consistent medication timing.</em>
            </div>
        </div>
    `;
}

function calculateBodyCondition() {
    const breed = document.getElementById('cat-breed').value;
    const currentWeight = document.getElementById('current-weight').value;
    const assessment = document.getElementById('body-assessment').value;
    const resultDiv = document.getElementById('body-condition-result');
    
    if (!breed || !currentWeight || !assessment) {
        resultDiv.innerHTML = '<div class="result-content error">Please fill in all fields.</div>';
        return;
    }
    
    const weight = parseFloat(currentWeight);
    
    // Ideal weight ranges
    const weightRanges = {
        'small': { min: 6, max: 9, ideal: 7.5 },
        'medium': { min: 9, max: 12, ideal: 10.5 },
        'large': { min: 12, max: 16, ideal: 14 },
        'giant': { min: 16, max: 25, ideal: 20 }
    };
    
    const range = weightRanges[breed];
    const idealWeight = range.ideal;
    
    let bodyScore = 0;
    let condition = '';
    let recommendations = [];
    
    switch(assessment) {
        case 'underweight':
            bodyScore = weight < range.min ? 2 : 3;
            condition = 'Underweight';
            recommendations = [
                'Increase food portions gradually',
                'Consider high-calorie food',
                'Rule out medical causes with vet',
                'Monitor weight weekly'
            ];
            break;
        case 'ideal':
            bodyScore = 5;
            condition = 'Ideal Weight';
            recommendations = [
                'Maintain current diet and exercise',
                'Continue regular weight monitoring',
                'Adjust portions if activity changes'
            ];
            break;
        case 'overweight':
            bodyScore = weight > range.max ? 7 : 6;
            condition = 'Overweight';
            recommendations = [
                'Reduce daily food portions by 10-15%',
                'Increase play and exercise',
                'Consider weight management food',
                'Monitor progress weekly'
            ];
            break;
        case 'obese':
            bodyScore = weight > range.max * 1.3 ? 9 : 8;
            condition = 'Obese';
            recommendations = [
                'Veterinary weight loss plan recommended',
                'Prescription weight management diet',
                'Structured exercise program',
                'Rule out medical causes (thyroid, etc.)'
            ];
            break;
    }
    
    const weightDifference = weight - idealWeight;
    const weightStatus = weightDifference > 0 ? `${weightDifference.toFixed(1)} lbs over ideal` : 
                        weightDifference < 0 ? `${Math.abs(weightDifference).toFixed(1)} lbs under ideal` : 'At ideal weight';
    
    const urgencyClass = bodyScore <= 3 ? 'warning' : bodyScore >= 7 ? 'warning' : 'success';
    
    resultDiv.innerHTML = `
        <div class="result-content ${urgencyClass}">
            <div class="body-score">
                <strong>Body Condition Score:</strong><br>
                <span class="score-number">${bodyScore}</span>/9 - ${condition}
            </div>
            <div class="weight-analysis">
                <strong>Weight Analysis:</strong><br>
                Current: ${weight} lbs (${weightStatus})
            </div>
            <div class="body-recommendations">
                <strong>Recommendations:</strong>
                <ul>
                    ${recommendations.map(rec => `<li>${rec}</li>`).join('')}
                </ul>
            </div>
            ${urgencyClass === 'warning' ? '<div class="vet-note"><em>Consider veterinary consultation for weight management plan.</em></div>' : ''}
        </div>
    `;
}
