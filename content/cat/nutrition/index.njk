<script>
function calculateCatFeeding() {
    const currentWeight = document.getElementById('cat-weight').value;
    const targetWeight = document.getElementById('target-weight').value;
    const age = document.getElementById('cat-age').value;
    const activity = document.getElementById('activity-level').value;
    const bodyCondition = document.getElementById('body-condition').value;
    const resultDiv = document.getElementById('feeding-result');
    
    if (!currentWeight || !targetWeight || !age || !activity || !bodyCondition) {
        resultDiv.innerHTML = '<div class="result-content error">Please fill in all fields.</div>';
        return;
    }
    
    const current = parseFloat(currentWeight);
    const target = parseFloat(targetWeight);
    const weightKg = target / 2.2; // Use target weight for calculation
    
    // Base metabolic rate for cats: 70 * (body weight in kg)^0.75
    let baseCalories = Math.round(70 * Math.pow(weightKg, 0.75));
    
    // Age multipliers
    let ageMultiplier = 1.0;
    switch(age) {
        case 'kitten':
            ageMultiplier = 2.5; // Growing kittens need much more energy
            break;
        case 'adult':
            ageMultiplier = 1.4;
            break;
        case 'senior':
            ageMultiplier = 1.1; // Lower metabolism
            break;
    }
    
    // Activity multipliers
    let activityMultiplier = 1.0;
    switch(activity) {
        case 'low':
            activityMultiplier = 0.8;
            break;
        case 'moderate':
            activityMultiplier = 1.0;
            break;
        case 'high':
            activityMultiplier = 1.2;
            break;
    }
    
    // Body condition adjustments
    let conditionMultiplier = 1.0;
    switch(bodyCondition) {
        case 'underweight':
            conditionMultiplier = 1.2; // Need more calories to gain weight
            break;
        case 'ideal':
            conditionMultiplier = 1.0;
            break;
        case 'overweight':
            conditionMultiplier = 0.8; // Reduce for weight loss
            break;
        case 'obese':
            conditionMultiplier = 0.6; // Significant reduction for weight loss
            break;
    }
    
    const totalCalories = Math.round(baseCalories * ageMultiplier * activityMultiplier * conditionMultiplier);
    
    // Food amount calculations
    const dryFoodCups = Math.round((totalCalories / 300) * 10) / 10; // ~300 cal/cup
    const wetFoodCans = Math.round((totalCalories / 80) * 10) / 10; // ~80 cal per 3oz can
    const mixedDry = Math.round((totalCalories * 0.3 / 300) * 10) / 10;
    const mixedWet = Math.round((totalCalories * 0.7 / 80) * 10) / 10;
    
    // Weight management advice
    let weightAdvice = '';
    const weightDiff = current - target;
    if (Math.abs(weightDiff) < 0.5) {
        weightAdvice = 'Maintain current weight with regular monitoring.';
    } else if (weightDiff > 0) {
        const weeksToGoal = Math.ceil(weightDiff / 0.5); // Safe weight loss: 0.5 lb/week
        weightAdvice = `Weight loss goal: ${weeksToGoal} weeks to lose ${weightDiff.toFixed(1)} lbs safely.`;
    } else {
        weightAdvice = `Weight gain needed: ${Math.abs(weightDiff).toFixed(1)} lbs. Monitor closely and consult vet.`;
    }
    
    // Feeding recommendations
    let feedingTips = [];
    if (age === 'kitten') {
        feedingTips = ['Feed 3-4 times daily', 'Use kitten-specific formula', 'Monitor growth weekly'];
    } else if (bodyCondition === 'obese') {
        feedingTips = ['Use weight management formula', 'Increase wet food percentage', 'Measure portions precisely', 'Consult vet for weight loss plan'];
    } else {
        feedingTips = ['Feed 2-3 times daily', 'Maintain consistent schedule', 'Monitor body condition monthly'];
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="calories-section">
                <strong>Daily Caloric Needs:</strong><br>
                <span class="calorie-number">${totalCalories}</span> calories/day
            </div>
            
            <div class="food-amounts">
                <strong>Food Options:</strong>
                <div class="food-type"><strong>Dry food only:</strong> ${dryFoodCups} cups/day</div>
                <div class="food-type"><strong>Wet food only:</strong> ${wetFoodCans} cans (3oz)/day</div>
                <div class="food-type"><strong>Mixed diet:</strong> ${mixedDry} cups dry + ${mixedWet} cans wet/day</div>
            </div>
            
            <div class="weight-management">
                <strong>Weight Management:</strong><br>
                ${weightAdvice}
            </div>
            
            <div class="feeding-tips">
                <strong>Feeding Tips:</strong>
                <ul>
                    ${feedingTips.map(tip => `<li>${tip}</li>`).join('')}
                </ul>
            </div>
            
            <div class="disclaimer">
                <em>Consult your veterinarian for specific dietary needs, especially for weight management or medical conditions.</em>
            </div>
        </div>
    `;
}

function calculateTreats() {
    const dailyCalories = document.getElementById('daily-calories').value;
    const treatType = document.getElementById('treat-type').value;
    const resultDiv = document.getElementById('treat-result');
    
    if (!dailyCalories || dailyCalories < 50) {
        resultDiv.innerHTML = '<div class="result-content error">Please enter valid daily calories.</div>';
        return;
    }
    
    const calories = parseInt(dailyCalories);
    const maxTreatCalories = Math.round(calories * 0.1); // 10% of daily calories
    
    let treatAmount = '';
    let treatCalories = 0;
    let treatAdvice = '';
    
    switch(treatType) {
        case 'commercial':
            treatCalories = 2; // Average per treat
            treatAmount = Math.floor(maxTreatCalories / treatCalories);
            treatAdvice = 'Choose high-quality, low-calorie cat treats. Read labels for calorie content.';
            break;
        case 'cooked-chicken':
            treatCalories = 25; // Per small piece (~0.5 oz)
            treatAmount = Math.floor(maxTreatCalories / treatCalories);
            treatAdvice = 'Use plain, cooked chicken breast. Remove all bones and seasonings.';
            break;
        case 'freeze-dried':
            treatCalories = 4; // Average per piece
            treatAmount = Math.floor(maxTreatCalories / treatCalories);
            treatAdvice = 'Freeze-dried treats are concentrated. Start with smaller amounts.';
            break;
        case 'catnip':
            treatAmount = 'As desired';
            treatAdvice = 'Catnip and cat grass are calorie-free and safe for most cats.';
            break;
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="treat-allowance">
                <strong>Daily Treat Allowance:</strong><br>
                <span class="treat-number">${maxTreatCalories}</span> calories maximum
            </div>
            
            <div class="treat-amount">
                <strong>Recommended Amount:</strong><br>
                ${treatAmount} ${treatType === 'catnip' ? '' : treatType === 'cooked-chicken' ? 'small pieces' : 'treats'} per day
            </div>
            
            <div class="treat-advice">
                <strong>Advice:</strong><br>
