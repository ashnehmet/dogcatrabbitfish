function calculateWaterNeeds() {
    const weight = document.getElementById('cat-weight-water').value;
    const wetPercent = document.getElementById('wet-food-percent').value;
    const resultDiv = document.getElementById('water-result');
    
    if (!weight || !wetPercent) {
        resultDiv.innerHTML = '<div class="result-content error">Please fill in all fields.</div>';
        return;
    }
    
    const catWeight = parseFloat(weight);
    const wetFoodPercent = parseInt(wetPercent);
    
    // Cats need approximately 3.5-4.5 oz of water per 5 lbs body weight per day
    const baseWaterNeed = Math.round((catWeight / 5) * 4 * 10) / 10; // oz per day
    
    // Wet food provides significant water content (about 70-80% water)
    const waterFromFood = Math.round(baseWaterNeed * (wetFoodPercent / 100) * 0.75 * 10) / 10;
    const additionalWaterNeeded = Math.round((baseWaterNeed - waterFromFood) * 10) / 10;
    
    let hydrationAdvice = [];
    if (wetFoodPercent < 50) {
        hydrationAdvice.push('Consider increasing wet food percentage');
        hydrationAdvice.push('Provide multiple water sources');
        hydrationAdvice.push('Consider a water fountain');
    } else {
        hydrationAdvice.push('Good hydration from wet food');
        hydrationAdvice.push('Continue providing fresh water daily');
    }
    
    if (additionalWaterNeeded > 6) {
        hydrationAdvice.push('Monitor for increased thirst (may indicate health issues)');
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="water-needs">
                <strong>Daily Water Needs:</strong><br>
                <span class="water-number">${baseWaterNeed}</span> oz total per day
            </div>
            
            <div class="water-sources">
                <strong>Water Sources:</strong><br>
                From food: ${waterFromFood} oz<br>
                From drinking: ${additionalWaterNeeded} oz needed
            </div>
            
            <div class="hydration-tips">
                <strong>Hydration Tips:</strong>
                <ul>
                    ${hydrationAdvice.map(advice => `<li>${advice}</li>`).join('')}
                </ul>
            </div>
            
            <div class="water-note">
                <em>Cats naturally have a low thirst drive. Wet food is crucial for proper hydration and urinary health.</em>
            </div>
        </div>
    `;
}

