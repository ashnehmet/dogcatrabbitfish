// Cat Age Calculator - More accurate than simple 7x multiplier
function calculateCatAge() {
    const age = document.getElementById('cat-age').value;
    const lifeStage = document.getElementById('cat-life-stage').value;
    const resultDiv = document.getElementById('cat-age-result');
    
    resultDiv.innerHTML = '';
    
    if (!age || age < 0 || age > 25) {
        resultDiv.innerHTML = `
            <div class="result-content error">
                <strong>Please enter a valid age between 0 and 25 years</strong>
            </div>
        `;
        return;
    }
    
    const catAge = parseFloat(age);
    let humanAge;
    let stage = '';
    
    // More accurate cat age calculation
    if (catAge < 1) {
        humanAge = catAge * 15;
        stage = 'Kitten';
    } else if (catAge === 1) {
        humanAge = 15;
        stage = 'Young Adult';
    } else if (catAge === 2) {
        humanAge = 24;
        stage = 'Adult';
    } else {
        // After 2 years, each cat year = 4 human years
        humanAge = 24 + ((catAge - 2) * 4);
        if (catAge < 7) stage = 'Adult';
        else if (catAge < 11) stage = 'Mature Adult';
        else if (catAge < 15) stage = 'Senior';
        else stage = 'Geriatric';
    }
    
    // Adjust for lifestyle (outdoor cats typically have shorter lifespans)
    let lifestyleNote = '';
    if (lifeStage === 'outdoor') {
        humanAge = Math.round(humanAge * 1.1); // Slightly higher aging rate
        lifestyleNote = 'Outdoor cats may age faster due to environmental stresses.';
    } else if (lifeStage === 'mixed') {
        humanAge = Math.round(humanAge * 1.05);
        lifestyleNote = 'Indoor/outdoor cats have moderate aging patterns.';
    } else {
        lifestyleNote = 'Indoor cats typically live longer, healthier lives.';
    }
    
    // Health recommendations
    let recommendations = [];
    if (catAge < 1) {
        recommendations = ['Kitten vaccinations', 'Frequent vet visits', 'Spay/neuter at 4-6 months'];
    } else if (catAge < 7) {
        recommendations = ['Annual vet checkups', 'Dental care', 'Weight monitoring'];
    } else if (catAge < 11) {
        recommendations = ['Bi-annual vet visits', 'Blood work screening', 'Joint health monitoring'];
    } else {
        recommendations = ['Quarterly vet visits', 'Senior blood panels', 'Comfort care considerations'];
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="age-result">
                <strong>Human Age Equivalent:</strong><br>
                <span class="age-number">${Math.round(humanAge)}</span> years old
            </div>
            <div class="life-stage">
                <strong>Life Stage:</strong> ${stage}
            </div>
            <div class="lifestyle-note">
                <strong>Lifestyle Impact:</strong><br>
                <em>${lifestyleNote}</em>
            </div>
            <div class="recommendations">
                <strong>Health Recommendations:</strong>
                <ul>
                    ${recommendations.map(rec => `<li>${rec}</li>`).join('')}
                </ul>
            </div>
        </div>
    `;
}

// Litter Box Calculator
function calculateLitterBoxes() {
    const numCats = document.getElementById('num-cats').value;
    const floors = document.getElementById('home-floors').value;
    const resultDiv = document.getElementById('litter-result');
    
    resultDiv.innerHTML = '';
    
    if (!numCats || numCats < 1 || numCats > 20) {
        resultDiv.innerHTML = `
            <div class="result-content error">
                <strong>Please enter a valid number of cats (1-20)</strong>
            </div>
        `;
        return;
    }
    
    const cats = parseInt(numCats);
    const numFloors = parseInt(floors);
    
    // Rule: Number of cats + 1, with at least one per floor
    const baseBoxes = cats + 1;
    const minPerFloor = numFloors > 1 ? numFloors : 1;
    const recommendedBoxes = Math.max(baseBoxes, minPerFloor);
    
    // Box size recommendations
    let boxSize = '';
    if (cats === 1) {
        boxSize = '18" x 24" minimum';
    } else if (cats <= 3) {
        boxSize = '20" x 30" recommended';
    } else {
        boxSize = 'Multiple large boxes (20" x 30" each)';
    }
    
    // Placement tips
    let placementTips = [
        'Place boxes in quiet, accessible locations',
        'Avoid high-traffic areas',
        'Keep food and water away from litter boxes',
        'Ensure easy access for all cats'
    ];
    
    if (numFloors > 1) {
        placementTips.push('Place at least one box per floor');
    }
    
    // Maintenance schedule
    let maintenanceSchedule = [];
    if (cats === 1) {
        maintenanceSchedule = ['Scoop daily', 'Complete change weekly', 'Deep clean monthly'];
    } else if (cats <= 3) {
        maintenanceSchedule = ['Scoop twice daily', 'Complete change every 3-4 days', 'Deep clean bi-weekly'];
    } else {
        maintenanceSchedule = ['Scoop multiple times daily', 'Complete change every 2-3 days', 'Deep clean weekly'];
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="box-recommendation">
                <strong>Recommended Litter Boxes:</strong><br>
                <span class="box-number">${recommendedBoxes}</span> boxes
            </div>
            <div class="box-size">
                <strong>Box Size:</strong> ${boxSize}
            </div>
            <div class="placement-tips">
                <strong>Placement Tips:</strong>
                <ul>
                    ${placementTips.map(tip => `<li>${tip}</li>`).join('')}
                </ul>
            </div>
            <div class="maintenance-schedule">
                <strong>Maintenance Schedule:</strong>
                <ul>
                    ${maintenanceSchedule.map(task => `<li>${task}</li>`).join('')}
                </ul>
            </div>
        </div>
    `;
}

// Cat Feeding Calculator
function calculateCatFeeding() {
    const weight = document.getElementById('cat-weight').value;
    const activity = document.getElementById('cat-activity').value;
    const foodType = document.getElementById('cat-type').value;
    const resultDiv = document.getElementById('feeding-result');
    
    resultDiv.innerHTML = '';
    
    if (!weight || weight < 1 || weight > 30) {
        resultDiv.innerHTML = `
            <div class="result-content error">
                <strong>Please enter a valid weight between 1 and 30 pounds</strong>
            </div>
        `;
        return;
    }
    
    const catWeight = parseFloat(weight);
    
    // Base calorie calculation for cats: 70 * (body weight in kg)^0.75
    const weightKg = catWeight / 2.2;
    let baseCalories = Math.round(70 * Math.pow(weightKg, 0.75));
    
    // Activity multipliers for cats
    let activityMultiplier;
    let activityDescription;
    switch(activity) {
        case 'low':
            activityMultiplier = 1.2;
            activityDescription = 'Senior/inactive cats';
            break;
        case 'moderate':
            activityMultiplier = 1.4;
            activityDescription = 'Average adult cats';
            break;
        case 'high':
            activityMultiplier = 1.6;
            activityDescription = 'Young/very active cats';
            break;
        default:
            activityMultiplier = 1.4;
            activityDescription = 'Average adult cats';
    }
    
    const dailyCalories = Math.round(baseCalories * activityMultiplier);
    
    // Food amount calculations
    let foodRecommendations = {};
    if (foodType === 'dry') {
        const dryAmount = Math.round((dailyCalories / 300) * 10) / 10; // ~300 cal/cup dry food
        foodRecommendations = {
            primary: `${dryAmount} cups of dry food per day`,
            schedule: '2-3 meals per day',
            tips: ['Measure portions accurately', 'Use measuring cup, not just a scoop']
        };
    } else if (foodType === 'wet') {
        const wetAmount = Math.round((dailyCalories / 80) * 10) / 10; // ~80 cal per 3oz can
        foodRecommendations = {
            primary: `${wetAmount} cans (3oz) of wet food per day`,
            schedule: '2-3 meals per day',
            tips: ['Refrigerate unused portions', 'Serve at room temperature']
        };
    } else { // mixed
        const dryAmount = Math.round((dailyCalories * 0.4 / 300) * 10) / 10;
        const wetAmount = Math.round((dailyCalories * 0.6 / 80) * 10) / 10;
        foodRecommendations = {
            primary: `${dryAmount} cups dry food + ${wetAmount} cans wet food per day`,
            schedule: 'Wet food for meals, dry for snacking',
            tips: ['Mix foods gradually when changing', 'Wet food provides extra hydration']
        };
    }
    
    // Weight category advice
    let weightCategory, weightTips;
    if (catWeight < 8) {
        weightCategory = 'Small Cat';
        weightTips = ['Monitor for weight loss', 'Small, frequent meals', 'High-calorie food if underweight'];
    } else if (catWeight < 12) {
        weightCategory = 'Average Cat';
        weightTips = ['Maintain current weight', 'Regular exercise important', 'Monitor body condition'];
    } else {
        weightCategory = 'Large Cat';
        weightTips = ['Weight management crucial', 'Increase exercise if possible', 'Consider weight management food'];
    }
    
    resultDiv.innerHTML = `
        <div class="result-content success">
            <div class="calories-section">
                <strong>Daily Caloric Needs:</strong><br>
                <span class="calorie-number">${dailyCalories}</span> calories/day
                <div class="activity-note">${activityDescription}</div>
            </div>
            
            <div class="food-recommendation">
                <strong>Feeding Recommendation:</strong><br>
                ${foodRecommendations.primary}
            </div>
            
            <div class="feeding-schedule">
                <strong>Feeding Schedule:</strong> ${foodRecommendations.schedule}
            </div>
            
            <div class="cat-info">
                <strong>Cat Category:</strong> ${weightCategory}
            </div>
            
            <div class="feeding-tips">
                <strong>Feeding Tips:</strong>
                <ul>
                    ${foodRecommendations.tips.concat(weightTips).map(tip => `<li>${tip}</li>`).join('')}
                </ul>
            </div>
            
            <div class="disclaimer">
                <em>Note: Adjust portions based on your cat's body condition. Consult your vet for specific dietary needs, especially for medical conditions.</em>
            </div>
        </div>
    `;
}

